@model Agri_Energy.Controllers.FarmerProductsViewModel

@{
    ViewData["Title"] = "Farmer Products";
}

<h2>@ViewData["Title"]</h2>

<h3>Farmer: @Model.Farmer.Name @Model.Farmer.Surname</h3>

<form method="get" asp-action="ViewFarmerProducts">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by product name" value="@ViewData["CurrentFilter"]" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Production Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Category</td>
                <td>@product.Price</td>
                <td>@product.ProductionDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
